<div style="position: relative; margin-bottom: 20px;text-align: center;max-width: 700px;background-color: #1d2129; border: 1px solid #efefef;">
            <%= link_to  user_post_path(current_user, post),style: '' do %>
              <img src="<%= post.file %>" style="max-width: 700px;max-height: 483px"/>
            <% end %>  
            <div class="post-content" style="background: #FFFC;color: #fff;text-align: left;font-size: 14px;padding: 10px;position: absolute;bottom: 20px;left: 20px;line-height: normal;width: 600px">
              <span style="color: #000;">
                <%= post.created_at.strftime("%B %d, %Y") %>
              </span>
              <div class="like_form" id="like_form">
                <% if current_user.liking?(post)%>
                  <%= render 'likes/unlike' ,  post: post  %>
                <% else%> 
                  <%= render 'likes/like' ,  post: post  %>
                <% end %>  
              </div>
              
              <div>                                
                <%= link_to  user_post_path(current_user, post) do %>
                  <p style=" color: #000;font-size: 23px;font-weight: 900;margin-top: 10px;">
                  <%= post.content %>
                  </p>                
                <% end %>  
                <span style="color: #000;">
                  <%= post.content %>
                </span>
              </div>
            </div>
          </div>