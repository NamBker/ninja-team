        </div>
        <div class="field col-md-3" style="margin: 20px 0px 10px;height: 100%">
          
          <%= f.file_field :picture, style: 'margin-bottom: 13px' %>  
          <button class="btn btn-default" style="width: 100%; margin-bottom: 0">Post</button>
        </div>
    </div>
  

  <div class="actions">
