.container
  .row{:style => ""}
    .col-md-3
      .block
        %ul.theme-meta{:style => "list-style: none;padding: 0px;"}
          %li{:style => "padding: 10px 30px 10px;"}
            %a.title{:href => "/", :style => " color: #777; text-decoration: none; "}
              %h4
                = @user.user_name
          %li{style: "padding: 0px 30px 10px"}
            - if current_user != @user
              #follow_form.follow{:onclick => "follow()", :style => "text-decoration: none"}
                - if current_user.following?(@user)
                  = render 'posts/unfollow'
                - else
                  = render 'posts/follow'
          %li{:style => "padding: 0px 30px 10px"}
            %p#followers{:style => " color: #777;"}
              = @user.followers.count
              followers
          %li{:style => "padding: 0px 30px 10px"}
            %p{:style => " color: #777;"}
              = @posts.count
              - if @posts.count > 0
                posts
              - else
                post
          %li{:style => "padding: 0px 30px 10px"}
            %p{:style => " color: #777;"} About
            %span Co-Founder  Producer at YumYum
          %li{:style => "padding: 0px 30px 10px"}
            %p{:style => " color: #777;"} Interests
            %span Seafood, Pizza, Cake
    .col-md-9
      - if current_user == @user
        = render 'form', post: @post
      - if @posts.count == 0
        %h3{:style => "color: #777"} Empty
      %hr{:style => "max-width: 725px"}
        - @posts.each do |post|
          %div{:style => "position: relative; margin-bottom: 20px"}
            = link_to  user_post_path(current_user, post) do
              %img{:src => "/assets/IAM_2048.jpg", :style => "max-width: 735px;max-height: 483px"}
              = link_to  user_post_path(current_user, post), style: 'background: #FFFC;color: #fff;text-align: left;font-size: 14px;padding: 10px;position: absolute;bottom: 20px;left: 20px;line-height: normal;width: 600px' do
                %span{:style => "color: #000;"}= post.created_at

                %span                  
                  %span{:style => "color: #000;float: right;"}
                    %img{:src => "/assets/heart.png"} &nbsp;&nbsp;0 likes
                  %p{:style => " color: #000;font-size: 23px;font-weight: 900;margin-top: 10px;"}
                    = post.title
                  %span{:style => "color: #000;"}= post.content
