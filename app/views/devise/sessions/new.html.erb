
<body class="login">
  <div class="container">
    <div class="content">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login-form' ) do |f| %>
        <h3 class="form-title">YumYum</h3>
        <div class="alert alert-danger display-hide">
          <button class="close" data-close="alert"></button>
          <span>
          Enter any username and password. </span>
        </div>
        
          <div class="field">
            <%= f.email_field :email,  style: 'background-color: #FFF;
  height: 43px;
  color: #262626;
  border: solid 1px #dbdbdb;width: 100%; padding-left:10px', placeholder: 'Email'%>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", style: 'background-color: #FFF;
  height: 43px;
  color: #262626;
  border: solid 1px #dbdbdb;width: 100%; padding-left:10px', placeholder: 'Password' %>
          </div>

         
            <div class="field">
              
              
            </div>
          

          <div class="form-actions">
            <%= f.submit "Log in", class: 'btn btn-success uppercase'%>
            <% if devise_mapping.rememberable? -%>
              <label class="rememberme check">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </label>
            <% end -%> 
            <a href="/users/password/new" id="forget-password" class="forget-password" style="margin-top: 15px">Forgot Password?</a>
          </div>            
          <div class="login-options">
            <h4>Or login with</h4>
            <ul class="social-icons">
              <li>
                <a class="social-icon-color facebook" data-original-title="facebook" href=""></a>
              </li>
              <li>
                <a class="social-icon-color twitter" data-original-title="Twitter" href=""></a>
              </li>
              <li>
                <a class="social-icon-color googleplus" data-original-title="Goole Plus" href=""></a>
              </li>
              <li>
                <a class="social-icon-color linkedin" data-original-title="Linkedin" href=""></a>
              </li>
            </ul>
          </div>
          <div class="create-account">
            <p>
              <a href="/users/sign_up" id="register-btn" class="uppercase">Create an account</a>
            </p>
          </div>
      <% end %>
    </div>
  </div>  
</body>
  
