
<body class="login" >
  <div class="container">
    <div class="content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'register-form') do |f| %>
        <h3>Sign Up</h3>
        <%= devise_error_messages! %>
        <p class="hint">
           Enter your personal details below:
        </p>
        <div class="field">
          <%= f.text_field :user_name, placeholder: 'Full Name' %>
        </div>
        <div class="field">
          <%= f.text_field :address, placeholder: 'Address' %>
        </div>
        <p class="hint">
           Enter your account details below:
        </p>
        <div class="field">
          <%= f.email_field :email,  placeholder: 'Email' %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control placeholder-no-fix', placeholder: 'Password'  %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control placeholder-no-fix', placeholder: 'Re-type Your Password'  %>
        </div>
        <div class="form-actions">
          <a href="/users/sign_in"><button type="button" id="register-back-btn" class="btn btn-default">Back</button></a>
           <%= f.submit "Sign up", class: 'btn btn-success uppercase pull-right'%>
        </div>
      <% end %>
    </div>
  </div>
</body>
